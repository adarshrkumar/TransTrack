---
import '../styles/menu.scss'
import '../styles/pages/settings.scss'

import Layout from '../layouts/Layout.astro'
var scripts = [
  {
    name: 'settings'
  }
]

var classItems = ['settings']

---
<Layout title="Settings" scripts={scripts} classItems={classItems}>
  <section class="main">
    <nav class="menu">
      <setting-option module-name="theme">
        <label for="theme">Color Theme: </label>
        <div class="select-parent">
          <select id="theme">
            <option selected disabled>Chose mode</option>
            <option value="system">System</option>
            <option value="light">Light</option>
            <option value="dark">Dark</option>
          </select>
        </div>
      </setting-option>
