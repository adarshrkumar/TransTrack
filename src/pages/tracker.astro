---
import '../styles/page.scss'
import '../styles/tracker.scss'

import Layout from '../layouts/Layout.astro'

var classItems = ['page']

var headItems = `<script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
<script type="module" src="/scripts/tracker.js"></script>`
---
<Layout title="Map / Live Tracker" classItems={classItems} headItems={headItems}>
  <section class="main">
    <div id="map"></div>
  </section>
  <script src="/scripts/page.js" is:inline></script>
  <script type='text/javascript' src='http://www.bing.com/api/maps/mapcontrol?callback=GetMap&key=[YOUR_BING_MAPS_KEY]' async defer></script>
  <script src="/scripts/eruda.js" is:inline></script>
</Layout>